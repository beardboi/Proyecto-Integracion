@page
@model DetailsModel
@{
    ViewData["Title"] = "Detalle de empleado";
}
@using Data.Entities

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                     <h2 class="display-4">Registro de horas trabajadas</h2>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th>NÂ°</th>
                                <th>Fecha</th>
                                <th>Horas Trabajadas</th>
                            </tr>
                        </thead>
                        <tbody>
                             @{int i = 1;}
                            @foreach (HorasTrabajadas horas in Model.ListaHorasTrabajadas)
                            {
                            <tr>
                                <td scope="row">@i</td>
                                <td>@horas.Fecha.ToShortDateString()</td>
                                <td>@horas.Horas</td>
                            </tr>
                            i++;
                            }   
                        </tbody>
                    </table>
                </div>
                    <div class="card-header">
                        <a asp-page="./Index">Volver</a>
                    </div>
            </div>
        </div>
    </div>
</div>