@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@using Data.Entities

&ensp;

<div class="text-center">
    <h1 class="display-4">Sistema de RRHH</h1>
</div>

<table class="table">

    <tr>
        <td>Número</td>
        <td>Rut</td>
        <td>Nombre</td>
    </tr>

    @{int i = 1;}
    @foreach (Persona persona in Model.personas)
    {
        <tr>
            <td>@i</td>
            <td>@persona.Rut</td>
            <td>@persona.Nombres @persona.Apellidos</td>
        </tr>
        i++;
    }
</table>
